<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.apps.heartrate.HomeFragment"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home_picture"
        android:adjustViewBounds="true"
        android:id="@+id/imageView"
        android:layout_weight="1" android:background="#08000000"/>

    <ImageButton
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/home_arrow_button"
        android:src="@drawable/home_arrow"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal"
        android:background="#08000000" android:baselineAlignBottom="true"/>


</LinearLayout>
